<!-- Modal usuarios -->
<div class="modal fade" id="nuevo" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleAsesores"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" id="formulario-usuario">

                    <!--Nombre-->
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text" class="form-control" id="aseNombre" placeholder="Nombre">
                    </div>

                    <!--ID-->
                    <div class="form-group">
                        <label for="id">Id Zoho</label>
                        <input type="text" class="form-control" id="aseIdZoho" placeholder="Id zoho">
                    </div>

                    <!--Estado-->
                    <div class="form-group">
                        <label for="estado">Estado</label>
                        <select id="aseEstado" class="selectpicker form-control">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>

                    <!-- Para la version 3.0 -->
